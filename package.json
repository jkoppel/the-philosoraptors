{
  "name": "the-philosoraptors",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check": "npm run lint && npm run build",
    "codegen-db": "kysely-codegen --out-file src/backend/db/types.ts",
    "lint": "eslint --fix .",
    "migrate-db": "vite-node src/backend/db/migrate.ts migrate && npm run codegen-db",
    "migrate-db-down": "vite-node src/backend/db/migrate.ts downgrade-one && npm run codegen-db",
    "migration": "npm run migrate-db",
    "dev": "next dev",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "better-sqlite3": "^11.2.1",
    "commander": "^12.1.0",
    "kysely": "^0.27.4",
    "kysely-codegen": "^0.16.5",
    "simple-git": "^3.19.1",
    "sqlite3": "^5.1.7",
    "ts-morph": "^19.0.0",
    "vite": "^5.0.10",
    "vite-node": "^1.1.0",
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/better-sqlite3": "^7.6.11",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.2",
    "globals": "^15.9.0",
    "typescript-eslint": "^8.4.0",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint-config-next": "14.2.8"
  }
}
